<h1>User info</h1>

<% if user_signed_in? %>
<ul>
  <li>
    <%= link_to "edit", edit_user_path(@user.id) %>
  </li>
</ul>
<% end %>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
	
  <%= f.submit 'Create Book' %>
<% end %>


