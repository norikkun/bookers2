<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/4eba34043b.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="containar">
        <div class="row">
          <div class="col-lg-12" style="background-color: #343a40;">
              <% if user_signed_in? %>
              
                 <ul class="navbar-nav ml-auto">
                  <li>
                    <%= link_to "Bookers", root_path %>
                  </li>
                  <li>
                    <%= link_to user_path(current_user) do%>
                    <i class="fa-solid fa-house"></i>Home
                    <% end %>
                  </li>
                  <li>
                    <%= link_to users_path do%>
                    <i class="fa-solid fa-users"></i>Users
                    <% end %>
                  </li>
                  <li>
                    <%= link_to books_path do%>
                    <i class="fa-solid fa-book-open"></i>Books
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete do%>
                    <i class="fa-solid fa-right-from-bracket"></i>Log out
                    <% end %>
                  </li>
                </ul>
                <% else %>
                <ul class="navbar-nav ml-auto">
                  <li>
                    <%= link_to "Bookers", root_path %>
                  </li>
                  <li>
                    <%= link_to root_path do %>
                    <i class="fa-solid fa-house"></i>Home
                    <% end %>
                  </li>
                  <li>
                    <%= link_to home_about_path do%>
                    <i class="fa-solid fa-link"></i>About
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_registration_path do%>
                    <i class="fa-solid fa-user-plus"></i>Sign up
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_session_path do%>
                    <i class="fa-solid fa-right-to-bracket"></i>Log in
                    <% end %>
                  </li>
                </ul>
                <% end %>
        </div>
      </div>
    </div>
  </header>
  <%= notice %>
    <%= yield %>
    <footer>
      <div>
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>